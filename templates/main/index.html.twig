{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! âœ…</h1>

    This friendly message is coming from:
    <table class="table">
        <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            
            {% for data in datas %}
                <tr>
                  <th scope="row">1</th>
                  <td>
                        {% if data.libelle is defined  %}
                            {{ data.libelle }}
                        {% endif %}
                        {% if data.brochureFilename is defined %}
                            {{ data.brochureFilename }}
                        {% endif %}
                  </td>
                  <td>{% if data.brochureFilename is defined %}
                            <a href="{{ asset('uploads/brochures/' ~ data.brochureFilename) }}">Download</a>
                            <a href="{{ path('product_edit_file', {'id': data.id}) }}">Update</a>
                            <form method="post" action="{{ path('product_delete', {'id': data.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id) }}">
                                <button class="btn">Delete</button>
                            </form>
                        {% endif %} </td>
                </tr>
                
            {% endfor %}
        </tbody>
        <tfoot>
            {{ knp_pagination_render(datas) }}
        </tfoot>
    </table>
    
    
</div>
{% endblock %}
