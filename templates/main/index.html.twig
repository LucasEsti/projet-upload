{% extends 'base.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}

    <div class="example-wrapper">
        <table class="table">
            <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Name</th>
                  <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>

                {% for data in datas %}
                    <tr>
                        <th scope="row">1</th>
                        <td>
                              {% if data.libelle is defined  %}
                                  {{ data.libelle }}
                              {% endif %}
                              {% if data.brochureFilename is defined %}
                                  {{ data.brochureFilename }}
                              {% endif %}
                        </td>
                        <td>
                            {% if data.brochureFilename is defined %}
                                <div class="row">
                                    <div class="col-4"><a href="{{ asset('uploads/brochures/' ~ data.brochureFilename) }}">Download</a></div>
                                    <div class="col-4"><a href="{{ path('product_edit_file', {'id': data.id}) }}">Update</a></div>
                                    <div class="col-4">
                                        <form method="post" action="{{ path('product_delete', {'id': data.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ data.id) }}">
                                            <button class="btn">Delete</button>
                                        </form>
                                    </div>
                                </div>
                                
                                
                                
                            {% endif %} 
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            
        </table>
        {{ knp_pagination_render(datas) }}


    </div>
{% endblock %}
